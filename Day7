/* AtmelStudio 7 설치 및 실습*/


/* LED Blinking */

#include <avr/io.h>
#include <util/delay.h>
#define F_CPU 14745600UL

int main(void)
{
	//DDRA = 0xff;
	
    int i=1;
	
    while (1) 
    {
		
		for(int i =0;i<4;i++) {

			 PORTA = 0x80;

			 PORTA = PORTA >> i;

			 _delay_ms(500);
		}
    }
	
}

/*LED Sequential Lighting up */ 

#include <avr/io.h>
#include <util/delay.h>
#define F_CPU 14745600UL

int main(void)
{
	DDRA = 0xff;
	
    int i=1;
	
    while (1) 
    {
		
		for(int i =0;i<8;i++) {

			 PORTA = 0x80;

			 PORTA = PORTA >> i;

			 _delay_ms(2000);
		}
    }
	
}




/* AtmelStudio 4 오류 해결 */

1. 장치관리자에서 수동 업데이트 
2. 크리스탈 진동수은 14745600 Hz로 설정
3.  #include <avr/io.h>
    #include <util/delay.h>
    #define F_CPU 14745600UL
4. DDRA = 0xff;
   PORTA를 출력으로 쓴다는 의미
   (Data Direction Register A)
   // DDRA = 0x00; 
   PORTA를 입력으로 쓴다는 의미
   // DDRA = 0xF0; 
   PORA의 상위 4비트는 출력으로, 하위 4비트는 입력으로 쓴다는 의미 
   참고 : 
   https://blog.naver.com/PostView.nhn?blogId=mini_wor1d&logNo=150052768108&proxyReferer=https%3A%2F%2Fwww.google.com%2F
   
